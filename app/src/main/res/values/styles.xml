<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- custom pre-Lollipop attributes -->
    </style>

    <!-- Base application theme pre lollipop. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
        <item name="android:textColorTertiary">@color/colorTertiaryText</item>
    </style>

    <style name="AppTheme.SwipeBack" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Tab layout -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
    </style>

    <!-- Tab layout text appearance -->
    <style name="TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryButton">
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>
